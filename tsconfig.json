{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./bin",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["@types/node"],
        "paths": {
            "@source": ["./model/source/index"],
            "@target": ["./model/target/index"],
        }
    }
}
